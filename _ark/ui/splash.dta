#ifdef HX_EE
{func
   get_text_entry_help_text
   ($array $ten $back)
   {resize $array 0}
   {if
      {$ten user_can_scroll}
      {push_back
         $array
         (fret1 help_nextletter)}}
   {if_else
      {$ten user_can_scroll}
      {if_else
         {$ten no_text_entered}
         {if
            $back
            {push_back
               $array
               (fret2 help_back)}}
         {push_back
            $array
            (fret2 help_deleteletter)}}
      {push_back
         $array
         (fret2 help_deleteletter)}}
   {if
      {$ten user_can_scroll}
      {push_back
         $array
         (strum help_updown)}}
   {eval $array}}
#endif