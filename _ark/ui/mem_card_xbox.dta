   (allow_back FALSE)
   (animate_transition FALSE)
   (allow_only_active_controller TRUE))
{new
   UIPanel
   dialog
   (file dialog.milo)
   DX_DIALOG_HANDLES
   (force_exit TRUE)
   (enable_buttons
      {$this enable dl_button1.btn}
      {$this enable dl_button2.btn}
      {$this set_focus dl_button1.btn})
   (disable_buttons
      {$this disable dl_button1.btn}
      {$this disable dl_button2.btn})
   (enter
      {{ui current_screen}
         reset_ambient}
      {$this enable_buttons}
      {$this dx_set_dialog})
   (get_button
      ($button_name)
      {sprintf 'dl_%s.btn' $button_name})
   (set_button_text
      ($button $text)
      {$button set_showing TRUE}
      {$this enable $button}
      {$button set_text $text})
   (set_button_focus
      ($button)
      {$this enable $button}
      {$this set_focus $button})
   (hide_button
      ($button)
      {$button set_showing FALSE}
      {$this disable $button})
   (setup
      ($btn1_text $btn2_text $default $msg $title)
      {do
         ($b1
            {$this get_button button1})
         ($b2
            {$this get_button button2})
         {if_else
            {!= $btn1_text ''}
            {$this set_button_text $b1 $btn1_text}
            {$this hide_button $b1}}
         {if_else
            {!= $btn2_text ''}
            {$this set_button_text $b2 $btn2_text}
            {$this hide_button $b2}}
         {switch
            $default
            (button1
               {$this set_button_focus $b1})
            (button2
               {$this set_button_focus $b2})
            (none 0)
            {fail
               "Expected button1/button2/none, got: "
               $default}}}
      {$this set_message $msg}
      {dl_title.lbl set_text $title}
      {helpbar
         set_display
         {$this
            get_help_text
            ()}})
   (set_message
      ($token)
      {dl_message.lbl set_text $token})
   (get_help_text
      ($array)
      {resize $array 0}
      {if
         {dl_button1.btn showing}
         {push_back
            $array
            (fret1 help_select)}}
      {if
         {dl_button2.btn showing}
         {push_back
            $array
            (strum help_updown)}}
      {eval $array})
   (message
      ($msg $title)
      {$this setup '' '' none $msg $title})}
