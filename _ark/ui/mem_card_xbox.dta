{new
   GHScreen
   saving_screen
   DIALOG_SCREEN
   (enter
      {set
         $enter_time
         {taskmgr ui_seconds}}
      {set $save_time 0.0}
      {set $done_saving FALSE}
      {set $done_polling FALSE}
      {dialog message mc_saving mc_title_saving}
      {memcard save_game $mc_overwrite}
      {set $mc_overwrite FALSE})
   (poll
      {if
         {! $done_polling}
         {do
            ($enter_dt
               {-
                  {taskmgr ui_seconds}
                  $enter_time})
            ($save_dt
               {- $save_time $enter_time})
            {if_else
               $done_saving
               {if
                  {'||'
                     {&&
                        {< $save_dt 1.0}
                        {>= $enter_dt 1.0}}
                     {&&
                        {>= $save_dt 1.0}
                        {>= $enter_dt 4.0}}}
                  {set $done_polling TRUE}
                  {dialog message mc_save_complete mc_title_saving}
                  {ui goto_screen $mc_return_screen}}
               {if
                  {>= $enter_dt 1.0}
                  {dialog message mc_saving_long mc_title_saving}}}}})
   (MEMCARD_RESULT_MSG
      {switch
         $result
         (kMCNoDeviceFound
            {ui goto_screen save_storage_missing_screen})
         (kMCNoError
            {set $done_saving 1}
            {set
               $save_time
               {taskmgr ui_seconds}}
            {foreach
               $cat
               (guitar skin song character outfit)
               {store_item_provider check_achievement $cat}}
            {campaign save_complete})
         (kMCFileExists
            {ui goto_screen saving_confirm_overwrite_screen})
         (kMCCorrupt
            {ui goto_screen saving_confirm_overwrite_screen})
         (kMCNotEnoughSpace
            {set $done_polling TRUE}
            {ui goto_screen saving_not_enough_space_screen})
         {set $done_polling TRUE}
         {ui goto_screen saving_failed_screen}})}
